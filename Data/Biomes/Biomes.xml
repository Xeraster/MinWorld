<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<Biome>
		<defName>Wasteland</defName>
		<label>Rocky Wasteland</label>
		<description>A wasteland devoid of life and organic matter</description>
		<mapColor>707070</mapColor><!-- the color is in rgb hex -->
		<class>Biome</class>

		<!-- 0: supports no life. 1: almost impossible. 2: difficult. 3: moderate. 4: easy. -->
		<survivability>1.1</survivability>
		<commonality>0.1</commonality><!-- make this a low number. wasteland is the biome that generally gets used when nothing else fits -->
		
		<!-- for zlevel 0 -->
		<terrainTypes>
			<li>
				<terrainDef>Rock</terrainDef>
				<commonality>2.5</commonality>
			</li>
			<li>
				<terrainDef>Gravel</terrainDef>
				<commonality>1</commonality>
			</li>
			<li>
				<terrainDef>RockyDirt</terrainDef>
				<commonality>0.1</commonality>
			</li>
		</terrainTypes>

		<!-- anything with a zlevel less than 0 uses terrain from this list instead -->
		<undergroundTerrainTypes>
			<li>
				<terrainDef>Rock</terrainDef>
				<commonality>1</commonality>
			</li>
		</undergroundTerrainTypes>

		<!-- maximum and minimum yearly average temperature in celsius for this type of biome to spawn -->
		<tempMin>-273.15</tempMin>
		<tempMax>1300</tempMax>

		<movementDiff>3.4</movementDiff>
		<forageability>0.01</forageability>
		<diseaseFrequency>0.1</diseaseFrequency>
		<wind>0.1</wind>
		<water>0.1</water>
		<clouds>1</clouds>
		<elevationVariance>5.7</elevationVariance>

		<spawnablePlants>
			<li>
				<plant>Tree</plant>
				<commonality>1.0</commonality>
			</li>
		</spawnablePlants>

		<spawnableWildlife>
			<li>
				<animal>GiantBug</animal>
				<commonality>9.2</commonality>
			</li>
			<li>
				<animal>Dog</animal>
				<commonality>0.1</commonality>
			</li>
			<li>
				<animal>PolarBear</animal>
				<commonality>1.2</commonality>
			</li>
		</spawnableWildlife>
	</Biome>

